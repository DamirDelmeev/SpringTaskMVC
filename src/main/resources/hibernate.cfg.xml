<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property> <!-- DB Driver -->

        <property name="connection.url">jdbc:postgresql://localhost:5432/postgres</property> <!-- BD Mane -->
        <property name="connection.username">postgres</property> <!-- DB User -->
        <property name="connection.password">postgres</property> <!-- DB Password -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <!--        <property name="hibernate.default_schema">task</property>-->
        <property name="hbm2ddl.auto">create</property> <!-- create / create-drop / update -->
        <property name="show_sql">true</property> <!-- Show SQL in console -->
        <property name="format_sql">true</property> <!-- Show SQL formatted -->
        <mapping class="home.task.spring.model.Customer"/>
        <mapping class="home.task.spring.model.Employee"/>
    </session-factory>
</hibernate-configuration>